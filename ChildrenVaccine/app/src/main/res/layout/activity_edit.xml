<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mobileappdevelop.icare.EditActivity"
    >
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TableLayout
                android:id="@+id/tlVaccine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Disease Name: "/>
                    <EditText
                        android:id="@+id/etDiseaseName"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:imeOptions="actionNext"
                        android:singleLine="true"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Vaccine Name: "/>
                    <EditText
                        android:id="@+id/etVaccineName"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:imeOptions="actionNext"
                        android:singleLine="true"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Details "/>
                    <EditText
                        android:id="@+id/etDetails"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:imeOptions="actionNext"
                        android:singleLine="true"/>
                </TableRow>
            </TableLayout>

            <Button
                android:layout_gravity="center"
                android:id="@+id/btnUpdate"
                android:layout_below="@+id/tlVaccine"
                android:layout_height="40dp"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="Update"
                android:background="@color/link_text_material_light"
                android:textColor="#fff"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>



